# Application
APP_NAME=Drug Interaction Knowledge Graph
DEBUG=true
API_PREFIX=/api/v1
GRAPHQL_PATH=/graphql
ENABLE_GRAPHQL=true

# Database / Cache
DATABASE_URL=postgresql+psycopg://drugnet:drugnet@db:5432/drugnet
REDIS_URL=redis://redis:6379/0

# CORS (JSON array)
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI providers
AI_PROVIDER=deepseek        # 可选: openai / claude / deepseek
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
AI_MODEL=deepseek-chat      # 对应所选供应商的模型名
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000

# Security
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HTTP client tuning
HTTP_TIMEOUT_SECONDS=30.0
HTTP_MAX_RETRIES=3
HTTP_MAX_CONNECTIONS=100
